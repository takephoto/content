<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <include layout="@layout/nagvration" android:id="@+id/nav_repeat"/>

    <ListView
        android:id="@+id/listviewrepeat"
       
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/repeat_bottom"
        android:layout_below="@+id/nav_repeat" >
    </ListView>

    <LinearLayout
        android:id="@+id/repeat_bottom"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/alarm_save"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/green_btn_state"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/alarm_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/red_btn_state"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </LinearLayout>

</RelativeLayout>